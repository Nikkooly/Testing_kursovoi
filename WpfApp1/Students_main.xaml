<Window x:Class="WpfApp1.Students_main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
       Title="Students_main" Height="500" Width="400" ResizeMode="NoResize" HorizontalAlignment="Center" x:Name="MyWin" 
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid Background="AliceBlue">
        <Grid Background="White" Margin="10,10,10,9.6">
            <TextBlock Padding="5" TextAlignment="Center" FontFamily="Arial" FontWeight="Bold" FontSize="16">
               <Run Text="Student panel"/>
            </TextBlock>
            <Button  x:Name="Close_click" Background="White" BorderBrush="White" HorizontalAlignment="Left" Height="27" Margin="350,0,0,454" VerticalAlignment="Bottom" Click="Close_click_student" Width="30">
                <StackPanel Orientation="Horizontal">
                    <Image Source="resources\close.png" Margin="0,0,0,0" />
                </StackPanel>
            </Button>
            <Image Source="resources\student_test.jpg" Margin="199,42,24,-8.6" />
        </Grid>
    </Grid>
</Window>
